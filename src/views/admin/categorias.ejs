<h2>Categorias</h2>
<small>Crie, consulte, edite ou exclua as categorias do blog.</small>
<hr>

<a href="categorias/adicionar"><button class="btn btn-outline-success mb-4">+ Adicionar Categoria</button></a>

<% if (qtdCategorias != 0) { %>

    <% categorias.forEach((categoria) => { %>

        <div class="card bg-light mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= categoria.nome %></h5>
                <small><%= categoria.slug %></small>

                <div class="d-flex flex-row mt-3">
                    <a href="categorias/editar/<%= categoria._id %>" class="me-2">
                        <button class="btn btn-primary">Editar Categoria</button>
                    </a>

                    <form method="POST" action="categorias/deletar">
                        <button class="btn btn-outline-danger" type="submit">Excluir Categoria</button>
                    </form>
                </div>
            </div>
        </div>

    <% }) %>
    
<% } else { %>

    <div class="alert alert-warning">
        <h5>Oops! Nenhuma categoria encontrada!</h5>
        <p>VocÃª pode criar uma nova categoria clicando em <b>'+ Adicionar Categoria'</b></p>
    </div>

<% } %>